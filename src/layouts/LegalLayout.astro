---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import "@/styles/global.css";
import faviconSCLogistics from "../../public/logo/SCLogistics.svg";
import Sidebar from "@/components/legalcomponents/Sidebar.astro";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href={faviconSCLogistics.src} />
    <meta name="generator" content={Astro.generator} />
    <title>Astro Basics</title>
  </head>

  <body>
    <Header />
    <section class="min-h-screen bg-background text-foreground">
      <div class="mx-auto max-w-7xl px-6 py-10 grid grid-cols-1 md:grid-cols-12 gap-8">
        <Sidebar/>
        <!-- Main -->
        <main class="md:col-span-9 space-y-14">
          <slot />
        </main>
      </div>
    </section>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
