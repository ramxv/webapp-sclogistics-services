            description={"Todo se puede"}
            content={"Este servicio es el fkn mejor"}
            client:idle
          />
        </div>
      </div>
      
      <!-- Image 4 -->
      <div class="group relative col-span-5 row-span-1 row-start-4 md:col-span-3 md:row-span-3 md:col-start-1 md:row-start-4 h-96 md:h-96 rounded-xl shadow-xl overflow-hidden cursor-pointer">
